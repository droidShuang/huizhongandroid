<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/di_1"
        android:minHeight="156dp">

        <TextView
            android:id="@+id/accident_summray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/accident_type"
            android:layout_alignStart="@+id/accident_type"
            android:layout_below="@id/accident_type"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/accident_img"
            android:text="@string/accident_summray"

            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/xuncha_name"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/accident_img"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:src="@drawable/tu_1" />

        <TextView
            android:id="@+id/text_tims"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/accident_img"
            android:layout_alignRight="@+id/accident_img"
            android:alpha="0.7"
            android:background="@color/white"
            android:gravity="center"
            android:text="发生时间：2015年8月06日—07日"
            android:textColor="#ff0000" />

        <TextView
            android:id="@+id/accident_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/accident_img"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:text="@string/accident_type"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </RelativeLayout>

</LinearLayout>