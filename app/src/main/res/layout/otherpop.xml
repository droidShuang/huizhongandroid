<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="其他异常"
        android:textSize="24px" />

    <com.junova.huizhong.widget.PicGridView
        android:id="@+id/gridview"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/text"
        android:horizontalSpacing="22dp"
        android:numColumns="4"
        android:verticalSpacing="22dp" />
    <EditText
        android:layout_marginTop="20dp"

        android:layout_below="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/other_edt"

        />
    <!--android:background="@drawable/denglukang_11"-->
    <TextView
        android:id="@+id/cancel"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/otherpop_btn"
        android:gravity="center_vertical|center_horizontal"
        android:text="取消"
        android:textColor="@color/black_white"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/upload"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/otherpop_btn"
        android:gravity="center_vertical|center_horizontal"
        android:text="上传"
        android:textColor="@color/black_white"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/save"
        android:layout_width="120dp"
        android:layout_height="60dp"

        android:background="@drawable/otherpop_btn"
        android:gravity="center_vertical|center_horizontal"
        android:text="保存"
        android:textColor="@color/black_white"
        android:textSize="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>