<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meter_item_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
		<TextView 
		    android:id="@+id/meterTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/white"
		    android:textSize="20sp"
		    android:padding="5dp"
		    android:layout_marginTop="10dp"
		    />
		<TextView 
		    android:id="@+id/meterNo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/summary"
		    android:layout_below="@id/meterTitle"
		    android:textSize="16sp"
		    android:padding="5dp"
		    />
		<TextView 
		    android:id="@+id/meterSummary"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/meterNo"
		    android:textColor="@color/white"
		    android:textSize="16sp"
		    android:padding="5dp"
		    />
        <TextView 
		    android:id="@+id/meterStatus"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:drawablePadding="5dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="20dp"
		    android:textSize="20sp"
		    android:padding="5dp"
		    />
    </RelativeLayout>

</LinearLayout>